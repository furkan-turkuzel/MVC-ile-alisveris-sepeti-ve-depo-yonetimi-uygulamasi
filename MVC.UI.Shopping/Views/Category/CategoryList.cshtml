@model MVC.UI.Shopping.Models.CategoryListViewModel

<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        if (category.ID == Model.CurrentCategory)
        {
            css += " active";
        }
        <a href="/Home/Index?category=@category.ID" class="@css">@category.CategoryName</a>
    }
</div>