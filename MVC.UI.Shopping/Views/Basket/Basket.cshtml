@model MVC.UI.Shopping.Models.BasketSummaryListViewModel

<ul class="dropdown-menu">
    @foreach (var item in Model.basket.AddedProducts)
    {
        <li>
            <a>
                @item.Product.ProductName
                <span class="badge">
                    @item.Quantity
                </span>
            </a>
        </li>
    }

    <li role="separator" class="divider">
    </li>
    <li>
        <a>
            <span class="glyphicon glyphicon-align-left glyphicon-shopping-cart">
                @Model.basket.Total
            </span>
        </a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        @Html.ActionLink("Go to Basket Details","List","Basket")
    </li>
</ul>